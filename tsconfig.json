{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@pages/*": [
        "./pages/*"
      ],
      "@public/*": [
        "public/*"
      ]
    }
  },
  "include": [
    "../src/**/*"
  ]
}

